---
import Layout from './Layout.astro'

export type Props = {
    frontmatter: {
        title: string
        attribution: string
    }
}

const {frontmatter: {title, attribution}} = Astro.props
---

<Layout title={title}>
    <main>
        <blockquote>
            <div>
                <slot/>
            </div>
            <footer>{attribution}</footer>
        </blockquote>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: var(--text);
        font-size: 1.5rem;
        line-height: 1.6;
        transform: translate(0, -50%);
    }

    blockquote {
        margin: 0;
        padding: 1rem;
        background: var(--background-light);
        border-left: 4px solid var(--accent);
    }

    blockquote > div {
        margin: 0;
        padding: 0;
        font-style: italic;
        text-align: center;
    }

    blockquote footer {
        margin-top: 0;
        font-size: 0.8em;
        color: var(--accent-dark);
        text-align: right;
    }
</style>

<style is:global>
    blockquote em {
        font-style: normal;
    }

    blockquote > div > :first-child {
        margin-top: 0;
    }

    blockquote > div > :last-child {
        margin-bottom: 0;
    }

    .page {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
